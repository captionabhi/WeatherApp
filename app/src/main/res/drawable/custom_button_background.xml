<!-- res/drawable/custom_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF6F61" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#FF3D3D" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF6F61"
                android:endColor="#FF3D3D"
                android:angle="45"/>
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#FF6F61" />
        </shape>
    </item>
</selector>
